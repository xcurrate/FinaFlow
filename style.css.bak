:root {
    --primary: #003366; /* Navy Blue */
    --primary-light: #f0f4f8;
    --success: #28a745; /* Green */
    --danger: #dc3545; /* Soft Red */
    --text: #333;
    --bg: #f5f7fa;
    --white: #ffffff;
    --border: #e1e4e8;
}

* { box-sizing: border-box; margin: 0; padding: 0; font-family: 'Inter', sans-serif; }

body { background-color: var(--bg); color: var(--text); min-height: 100vh; }

.container { max-width: 1200px; margin: 0 auto; padding: 20px; }
.hidden { display: none !important; }
.w-100 { width: 100%; }

/* --- Auth Styling --- */
.auth-wrapper { display: flex; justify-content: center; align-items: center; height: 100vh; }
.auth-card { width: 100%; max-width: 400px; text-align: center; }

/* --- Dashboard Grid --- */
.summary-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    margin-bottom: 20px;
}

.main-content {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 20px;
}

/* On Mobile, stack columns */
@media (max-width: 768px) {
    .main-content { grid-template-columns: 1fr; }
}

/* --- Components --- */
.card {
    background: var(--white);
    padding: 20px;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0,0,0,0.05);
    margin-bottom: 20px;
}

.app-header {
    display: flex; justify-content: space-between; align-items: center;
    margin-bottom: 30px; color: var(--primary);
}

.summary-card h3 { font-size: 0.9rem; color: #666; margin-bottom: 10px; }
.summary-card p { font-size: 1.8rem; font-weight: 700; color: var(--primary); }
.summary-card.income p { color: var(--success); }
.summary-card.expense p { color: var(--danger); }

/* --- Forms & Inputs --- */
.form-group { margin-bottom: 15px; text-align: left; }
label { display: block; margin-bottom: 5px; font-size: 0.9rem; font-weight: 600; }
input, select {
    width: 100%; padding: 10px; border: 1px solid var(--border);
    border-radius: 6px; font-size: 1rem;
}

/* --- Buttons --- */
.btn {
    padding: 10px 20px; border: none; border-radius: 6px;
    cursor: pointer; font-weight: 600; transition: 0.2s;
}
.btn-primary { background-color: var(--primary); color: white; }
.btn-primary:hover { opacity: 0.9; }
.btn-danger { background-color: var(--danger); color: white; }
.btn-outline { background: transparent; border: 1px solid var(--primary); color: var(--primary); }
.btn-sm { padding: 5px 10px; font-size: 0.85rem; }

/* --- Table --- */
.table { width: 100%; border-collapse: collapse; margin-top: 15px; }
.table th { text-align: left; padding: 10px; border-bottom: 2px solid var(--border); color: var(--primary); }
.table td { padding: 10px; border-bottom: 1px solid var(--border); }
.amount-inc { color: var(--success); font-weight: 600; }
.amount-exp { color: var(--danger); font-weight: 600; }

.card-header-row { display: flex; justify-content: space-between; align-items: center; }

/* --- Advice Card --- */
.advice-card { border-left: 5px solid var(--primary); background-color: var(--primary-light); }

/* --- PRINT STYLE --- */
@media print {
    body { background-color: white; }
    .content-left, .auth-wrapper, #logout-btn, .actions, .actions button, th:last-child, td:last-child {
        display: none !important;
    }
    .main-content { display: block; }
    .container { width: 100%; max-width: 100%; padding: 0; }
    .card { box-shadow: none; border: 1px solid #ddd; break-inside: avoid; }
    .app-header h1 { font-size: 24px; }
}
